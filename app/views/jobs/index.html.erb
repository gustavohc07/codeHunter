<h1>Todas as vagas</h1>
<% if current_headhunter %>
  <%= link_to 'Minhas vagas' %>
  <%= link_to 'Cadastrar nova vaga' %>
  <%= link_to 'Sair', destroy_headhunter_session_path, method: :delete %>
<%end %>

<% if @jobs.any? %>
  <div class="container">
  <% @jobs.each do |job| %>
    <div class="container__job">
      <div class="container__job-title"><%= "#{job.title} - #{job.number_of_vacancies} vagas" %></div>
      <div class="container__job-level"><%= job.level %></div>
      <div class="container__job-contract_type"><%= job.contract_type %></div>
      <div class="container__job-details"><%= link_to 'Ver detalhes', job %></div>
    </div>
  <% end %>
  </div>
<%else %>
  <% unless headhunter_signed_in? %>
    <h2>Que pena! Não há vagas públicas listadas no momento.</h2>
  <% else %>
    <h2>Não há vagas cadastradas! Que tal ser o primeiro? Basta <%= link_to 'clicar aqui', new_job_path %>! :)</h2>
  <% end %>
<% end %>

<%= link_to 'Voltar', root_path %>