<h2><%= @application.job.title %></h2>
<br>

<h2>Mensagem ao CodeHunter:</h2>
<br>
<%= @application.message %> <br>
<%= link_to 'Editar mensagem' %>
<br>

<% if headhunter_signed_in? %>
  <%= render partial: 'profiles/profile', locals: {profile: @profile} %>
  <%= link_to 'Deixar Comentário',new_application_message_path(application_id: @application) %>
  <% if @application.in_progress? %>
    <%= link_to 'Destacar Perfil', application_highlight_path(@application.id), method: :post %>
  <% elsif @application.highlighted? %>
    <%= link_to 'Cancelar Destaque', application_cancel_highlight_path(@application.id), method: :post %>
  <% end %>
  <%= link_to 'Voltar', job_candidatelist_path(@application) %>
<% end %>

<%= link_to 'Ir para descrição da vaga', job_path(@application.job_id) %>
<br>
<% if candidate_signed_in? %>
  <%= link_to 'Cancelar Inscrição', application_path, method: :delete %>
<% end %>

<% if @application.messages.any? %>
  <h3>Mensagens</h3>
  <% @application.messages.each do |message| %>
    <div>
      <p>Enviada há <%= distance_of_time_in_words(message.created_at, Time.zone.now) %></p>
      <%= message.comment %>
    </div>
  <% end %>
<% end %>



